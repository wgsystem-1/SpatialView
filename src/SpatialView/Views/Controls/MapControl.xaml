<UserControl x:Class="SpatialView.Views.Controls.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpatialView.Views.Controls"
             xmlns:vm="clr-namespace:SpatialView.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MapViewModel, IsDesignTimeCreatable=False}">
    <Grid x:Name="MapContainer" Background="#E0E0E0">
        <!-- WPF Canvas for map rendering -->
        <Canvas x:Name="MapCanvas" 
                Background="#E0E0E0"
                ClipToBounds="True"
                Focusable="True"/>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Background="#80FFFFFF" 
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100"/>
                <TextBlock Text="로딩 중..." Margin="0,8,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

