<Window x:Class="SpatialView.Views.Dialogs.FieldCalculatorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="필드 계산기"
        Width="520" Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="400" MinHeight="400"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="필드 계산기" 
                   FontSize="18" FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,16"/>
        
        <!-- Target Field -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0" x:Name="TargetFieldComboBox"
                      materialDesign:HintAssist.Hint="대상 필드"
                      materialDesign:HintAssist.IsFloating="True"/>
            
            <Button Grid.Column="1" Content="새 필드" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="NewField_Click"
                    Margin="8,0,0,0" Height="36"/>
        </Grid>
        
        <!-- Fields List -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Available Fields -->
            <GroupBox Grid.Column="0" Header="사용 가능한 필드" Margin="0,0,8,0">
                <ListBox x:Name="FieldsListBox" Height="100"
                         MouseDoubleClick="FieldsListBox_DoubleClick"/>
            </GroupBox>
            
            <!-- Functions -->
            <GroupBox Grid.Column="1" Header="함수" Margin="8,0,0,0">
                <ListBox x:Name="FunctionsListBox" Height="100"
                         MouseDoubleClick="FunctionsListBox_DoubleClick">
                    <ListBoxItem Content="LENGTH(field)" ToolTip="문자열 길이"/>
                    <ListBoxItem Content="UPPER(field)" ToolTip="대문자로 변환"/>
                    <ListBoxItem Content="LOWER(field)" ToolTip="소문자로 변환"/>
                    <ListBoxItem Content="TRIM(field)" ToolTip="앞뒤 공백 제거"/>
                    <ListBoxItem Content="ROUND(field, n)" ToolTip="소수점 n자리로 반올림"/>
                    <ListBoxItem Content="ABS(field)" ToolTip="절대값"/>
                    <ListBoxItem Content="CONCAT(a, b)" ToolTip="문자열 결합"/>
                    <ListBoxItem Content="SUBSTRING(field, start, length)" ToolTip="부분 문자열"/>
                </ListBox>
            </GroupBox>
        </Grid>
        
        <!-- Expression -->
        <GroupBox Grid.Row="3" Header="계산식" Margin="0,8,0,0">
            <TextBox x:Name="ExpressionTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="14"
                     materialDesign:HintAssist.Hint="예: [Field1] * 2 + [Field2]"/>
        </GroupBox>
        
        <!-- Help Text -->
        <TextBlock Grid.Row="4" 
                   Text="필드는 [필드명] 형식으로 참조합니다. 예: [Area] * 0.0001"
                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                   FontSize="12" Margin="0,8,0,0"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="취소" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"/>
            <Button Content="미리보기" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Preview_Click"
                    Margin="0,0,8,0"/>
            <Button Content="적용" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Apply_Click"/>
        </StackPanel>
    </Grid>
</Window>

