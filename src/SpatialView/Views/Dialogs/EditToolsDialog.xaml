<Window x:Class="SpatialView.Views.Dialogs.EditToolsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="편집 도구" 
        Height="450" Width="320"
        MinHeight="400" MinWidth="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundBrush}"
        Topmost="True">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="편집 도구" FontSize="18" FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="피처를 생성, 수정, 삭제합니다."
                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Layer Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="편집 레이어" FontWeight="Medium" Margin="0,0,0,8"/>
            <ComboBox x:Name="LayerComboBox"
                      materialDesign:HintAssist.Hint="레이어 선택"
                      SelectionChanged="LayerComboBox_SelectionChanged"/>
        </StackPanel>
        
        <!-- Create Tools -->
        <GroupBox Grid.Row="2" Header="피처 생성" Margin="0,0,0,16">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="CreatePointButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="CreatePoint_Click"
                            ToolTip="포인트 생성"
                            Width="48" Height="48" Margin="0,0,8,0">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="MapMarker" Width="24" Height="24"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="CreateLineButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="CreateLine_Click"
                            ToolTip="라인 생성"
                            Width="48" Height="48" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="VectorLine" Width="24" Height="24"/>
                    </Button>
                    <Button x:Name="CreatePolygonButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="CreatePolygon_Click"
                            ToolTip="폴리곤 생성"
                            Width="48" Height="48">
                        <materialDesign:PackIcon Kind="VectorPolygon" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Edit Tools -->
        <GroupBox Grid.Row="3" Header="편집 도구" Margin="0,0,0,16">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ModifyButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="Modify_Click"
                            ToolTip="피처 수정"
                            Width="48" Height="48" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="VectorPoint" Width="24" Height="24"/>
                    </Button>
                    <Button x:Name="MoveButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="Move_Click"
                            ToolTip="피처 이동"
                            Width="48" Height="48" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="CursorMove" Width="24" Height="24"/>
                    </Button>
                    <Button x:Name="DeleteButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="Delete_Click"
                            ToolTip="피처 삭제"
                            Width="48" Height="48">
                        <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" Foreground="#F44336"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Status -->
        <Border Grid.Row="4" 
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="4"
                Padding="12">
            <StackPanel>
                <TextBlock Text="상태" FontWeight="Medium" Margin="0,0,0,8"/>
                <TextBlock x:Name="StatusText"
                           Text="편집 대기 중..."
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button x:Name="UndoButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="Undo_Click"
                            ToolTip="실행 취소 (Ctrl+Z)"
                            IsEnabled="False"
                            Width="36" Height="36" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="Undo" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="RedoButton"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="Redo_Click"
                            ToolTip="다시 실행 (Ctrl+Y)"
                            IsEnabled="False"
                            Width="36" Height="36">
                        <materialDesign:PackIcon Kind="Redo" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="완료" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="FinishButton_Click"
                    Width="80" Margin="0,0,8,0"/>
            <Button Content="닫기" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CloseButton_Click"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
