<Window x:Class="SpatialView.Views.Dialogs.AddFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="필드 추가"
        Width="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="새 필드 추가" 
                   FontSize="18" FontWeight="SemiBold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,20"/>
        
        <!-- Field Name -->
        <TextBox Grid.Row="1" x:Name="FieldNameTextBox"
                 materialDesign:HintAssist.Hint="필드 이름"
                 materialDesign:HintAssist.IsFloating="True"
                 Margin="0,0,0,20"/>
        
        <!-- Field Type -->
        <ComboBox Grid.Row="2" x:Name="FieldTypeComboBox"
                  materialDesign:HintAssist.Hint="필드 타입"
                  materialDesign:HintAssist.IsFloating="True"
                  SelectedIndex="0"
                  Margin="0,0,0,20">
            <ComboBoxItem Content="문자열 (String)"/>
            <ComboBoxItem Content="정수 (Integer)"/>
            <ComboBoxItem Content="실수 (Double)"/>
            <ComboBoxItem Content="날짜 (DateTime)"/>
        </ComboBox>
        
        <!-- Default Value -->
        <TextBox Grid.Row="3" x:Name="DefaultValueTextBox"
                 materialDesign:HintAssist.Hint="기본값 (선택사항)"
                 materialDesign:HintAssist.IsFloating="True"
                 Margin="0,0,0,24"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="취소" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"
                    Height="36"/>
            <Button Content="추가" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Add_Click"
                    Height="36"/>
        </StackPanel>
    </Grid>
</Window>

