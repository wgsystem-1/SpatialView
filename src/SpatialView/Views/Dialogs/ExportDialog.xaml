<Window x:Class="SpatialView.Views.Dialogs.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="지도 내보내기" 
        Height="650" Width="750"
        MinHeight="550" MinWidth="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Settings -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="지도 내보내기" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="현재 지도 화면을 이미지 또는 PDF로 내보냅니다."
                               FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Export Format -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="내보내기 형식" FontWeight="Medium" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="PngRadio" 
                                     Content="PNG" 
                                     IsChecked="True"
                                     GroupName="ExportFormat"
                                     Margin="0,0,12,0"/>
                        <RadioButton x:Name="JpegRadio" 
                                     Content="JPEG"
                                     GroupName="ExportFormat"
                                     Margin="0,0,12,0"/>
                        <RadioButton x:Name="PdfRadio" 
                                     Content="PDF"
                                     GroupName="ExportFormat"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Output Size -->
                <GroupBox Header="출력 크기" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="너비:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="WidthTextBox" Text="1920" Margin="0,0,0,4"/>
                            <TextBlock Grid.Column="2" Text="px" VerticalAlignment="Center" Margin="4,0,0,4"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="높이:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="HeightTextBox" Text="1080" Margin="0,0,0,4"/>
                            <TextBlock Grid.Column="2" Text="px" VerticalAlignment="Center" Margin="4,0,0,4"/>
                        </Grid>
                        <CheckBox x:Name="MaintainAspectRatioCheckBox"
                                  Content="화면 비율 유지"
                                  IsChecked="True"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- DPI -->
                <GroupBox Header="해상도" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="DPI:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" x:Name="DpiComboBox">
                            <ComboBoxItem Content="72 (화면용)" Tag="72"/>
                            <ComboBoxItem Content="150 (웹용)" Tag="150" IsSelected="True"/>
                            <ComboBoxItem Content="300 (인쇄용)" Tag="300"/>
                            <ComboBoxItem Content="600 (고품질)" Tag="600"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>
                
                <!-- Options -->
                <GroupBox Header="지도 요소" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <CheckBox x:Name="IncludeScaleBarCheckBox"
                                  Content="축척 막대"
                                  IsChecked="True"
                                  Checked="Option_Changed"
                                  Unchecked="Option_Changed"
                                  Margin="0,0,0,6"/>
                        <CheckBox x:Name="IncludeNorthArrowCheckBox"
                                  Content="방위표"
                                  IsChecked="True"
                                  Checked="Option_Changed"
                                  Unchecked="Option_Changed"
                                  Margin="0,0,0,6"/>
                        <CheckBox x:Name="IncludeLegendCheckBox"
                                  Content="범례"
                                  IsChecked="False"
                                  Checked="Option_Changed"
                                  Unchecked="Option_Changed"
                                  Margin="0,0,0,6"/>
                        <CheckBox x:Name="IncludeTitleCheckBox"
                                  Content="제목"
                                  IsChecked="False"
                                  Checked="Option_Changed"
                                  Unchecked="Option_Changed"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="취소" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="CancelButton_Click"
                            Width="70" Margin="0,0,8,0"/>
                    <Button Content="내보내기" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="ExportButton_Click"
                            Width="90"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Right Panel - Preview -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Preview Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="미리보기" FontWeight="Medium" FontSize="14"/>
                <TextBlock x:Name="PreviewInfoText"
                           Text="1920 x 1080 px, PNG"
                           FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <!-- Preview Image -->
            <Border Grid.Row="1" 
                    Background="#E8E8E8" 
                    CornerRadius="4"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Grid>
                    <!-- Loading indicator -->
                    <StackPanel x:Name="LoadingPanel" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4"/>
                        <TextBlock Text="미리보기 생성 중..." 
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- Preview Image -->
                    <Image x:Name="PreviewImage" 
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </Border>
            
            <!-- Preview Controls -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="새로고침" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="RefreshPreview_Click"
                        Padding="8,4"/>
                <TextBlock x:Name="PreviewStatusText"
                           Text=""
                           FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
