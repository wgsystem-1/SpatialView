<Window x:Class="SpatialView.Views.Dialogs.MeasurementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="측정 도구" 
        Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}"
        Topmost="True">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="측정 도구" FontSize="18" FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="지도에서 클릭하여 거리 또는 면적을 측정합니다."
                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Measurement Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="측정 유형" FontWeight="Medium" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="DistanceRadio" 
                             Content="거리 측정" 
                             IsChecked="True"
                             GroupName="MeasurementType"
                             Checked="MeasurementType_Changed"
                             Margin="0,0,16,0"/>
                <RadioButton x:Name="AreaRadio" 
                             Content="면적 측정"
                             GroupName="MeasurementType"
                             Checked="MeasurementType_Changed"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Results -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Total Result -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="측정 결과" FontWeight="Medium" FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="TotalResultText" 
                               Text="0.00 m"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Segment List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="세그먼트별 거리" FontWeight="Medium" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   Visibility="{Binding ElementName=DistanceRadio, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <ItemsControl x:Name="SegmentList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F5F5F5" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Index, StringFormat='#{0}'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" Width="30"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Distance}"
                                                       FontWeight="Medium"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Point Count for Area -->
                        <TextBlock x:Name="PointCountText"
                                   Text="꼭지점: 0개"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding ElementName=AreaRadio, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Unit Selection -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="단위:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="UnitComboBox" 
                      Grid.Column="1"
                      SelectionChanged="UnitComboBox_SelectionChanged"
                      materialDesign:HintAssist.Hint="단위 선택">
                <ComboBoxItem Content="미터 (m)" Tag="Meters"/>
                <ComboBoxItem Content="킬로미터 (km)" Tag="Kilometers"/>
                <ComboBoxItem Content="마일 (mi)" Tag="Miles"/>
                <ComboBoxItem Content="피트 (ft)" Tag="Feet"/>
            </ComboBox>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="ClearButton"
                    Content="초기화" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="ClearButton_Click"
                    Width="80" Margin="0,0,8,0"/>
            <Button Content="닫기" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="CloseButton_Click"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
